{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class='container'>
        <h1 class='mb-4 mt-3'>Liste des contacts</h1> 
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for c in contact %}
                    <tr>
                        <th scope="row">{{ c.id }}</th>
                        <td>{{ c.nom }}</td>
                        <td>{{ c.prenom }}</td>
                        <td>
                            {% if newNumber is defined %}
                                {{ newNumber }}
                            {% else %}
                                {{ c.telephone }}
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_contact', { 'id': c.id }) }}" type="button" class="btn btn-info">Afficher</a>
                            {% if app.user %}
                                <a href="{{ path('new_number', { 'id': c.id }) }}" type="button" class="btn btn-warning">Modifier</a>    
                                <a href="{{ path('del_contact', { 'id': c.id }) }}" type="button" class="btn btn-danger">Supprimer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
